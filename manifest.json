{
  "manifest_version": 3,
  "name": "Job Compass",
  "description": "AI-powered job search assistant that scrapes listings, scores them based on your preferences, and provides intelligent application recommendations.",
  "version": "1.0",
  "icons": {
    "16": "images/JobCompass.png",
    "32": "images/JobCompass.png",
    "48": "images/JobCompass.png",
    "128": "images/JobCompass.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/JobCompass.png",
      "32": "images/JobCompass.png",
      "48": "images/JobCompass.png",
      "128": "images/JobCompass.png"
    },
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage",
    "contextMenus"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    },
    "clear_jobs": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Clear all saved job listings"
    }
  }
}